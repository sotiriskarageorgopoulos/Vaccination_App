<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_layout1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".MainFragment"
>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/heading1_home"
                  android:text="@string/heading1_home"
                  android:textSize="18sp"
                  android:layout_below="@+id/navbar"
                  android:layout_marginTop="2dp"
                  android:layout_marginLeft="10dp"
                  android:textColor="@color/purple_500"
                  android:layout_centerHorizontal="true"
        />
        <ImageView android:layout_width="320dp"
                   android:layout_height="130dp"
                   android:layout_below="@+id/heading1_home"
                   android:id="@+id/health_ministry_img"
                   android:background="@drawable/vaccination_center"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="2dp"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/text1_home"
                  android:text="@string/text1_home"
                  android:layout_below="@+id/health_ministry_img"
                  android:layout_marginTop="2dp"
                  android:textSize="13sp"
                  android:padding="10dp"
                  android:textColor="@color/purple_500"
                  android:layout_centerHorizontal="true"
        />
</RelativeLayout>